<UserControl x:Class="TestWPFPackages.Views.Custom1Test"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:cc="clr-namespace:TestWpfPackages.Controls"
			 xmlns:vm="clr-namespace:TestWPFPackages.Core.ViewModels"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance Type=vm:TestViewModel}"
			 d:DesignHeight="250" d:DesignWidth="350" d:Background="White"
			 HorizontalContentAlignment="Left">
	<Grid HorizontalAlignment="Stretch" Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" Text="Custom Control1 Test" Style="{StaticResource appViewTitleStyle}"/>
		<StackPanel Grid.Row="1" Margin="0,10" HorizontalAlignment="Stretch">
			<cc:CustomControl1 Padding="3" Width="300" Height="45" HorizontalAlignment="Left"
						   IsReadOnly="True" TextChanged="TextChanged"
						   Text="{Binding Path=Name, UpdateSourceTrigger=Explicit}"/>
		</StackPanel>
	</Grid>
</UserControl>
