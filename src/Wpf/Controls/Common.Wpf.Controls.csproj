<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <AssemblyTitle>Common Wpf controls.</AssemblyTitle>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <!-- Package Information -->
  <PropertyGroup>
    <Version>1.0.5-alpha</Version>
    <PackageReleaseNotes>* Nothing yet.</PackageReleaseNotes>
    <PackageId>kdheath.Wpf.Controls</PackageId>
    <PackageDescription>Provides UI controls for .NET Windows Presentation Foundation applications.</PackageDescription>
    <PackageProjectUrl>https://kevindheath.github.io/shfb/html/Components.htm</PackageProjectUrl>
    <RepositoryUrl>https://github.com/KevinDHeath/NuGetPackages/tree/main/src/Wpf/Controls</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <!-- IMPORTANT: add common resources as links -->
    <None Include="..\..\..\docs\Wpf.Controls\README.md" Pack="true" PackagePath="\" Link="Properties\README.md" />
    <Resource Include="Assets\fontawesome-webfont.ttf" CopyToOutputDirectory="Never" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="kdheath.Wpf.Resources" Version="1.0.4" />
  </ItemGroup>

</Project>
