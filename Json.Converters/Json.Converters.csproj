<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyTitle>Json Converter classes.</AssemblyTitle>
    <AssemblyVersion>1.0.0.1</AssemblyVersion>
    <FileVersion>1.0.2.0</FileVersion>
    <NuGetLocal Condition=" '$(NuGetLocal)' == '' ">..\..\packages</NuGetLocal>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <!-- Package Version -->
  <PropertyGroup>
    <Version>1.0.3-alpha1</Version>
    <PackageReleaseNotes>* Added support for .NET 8.0</PackageReleaseNotes>
    <PackageDescription>Provides null, string, and interface converters for JSON serialization classes that are provided in the System.Text.Json namespace.</PackageDescription>
    <Copyright>Copyright Â© 2023 KevinDHeath</Copyright>
    <PackageOutputPath>$(NuGetLocal)</PackageOutputPath>
  </PropertyGroup>

  <!-- Package Information -->
  <PropertyGroup>
    <PackageId>kdheath.Json.Converters</PackageId>
    <Authors>Kevin D. Heath</Authors>
    <PackageProjectUrl>https://github.com/KevinDHeath/MyProjects/tree/main/docs/NuGet/Json.Converters</PackageProjectUrl>
    <RepositoryUrl>https://github.com/KevinDHeath/MyProjects/tree/main/src/NuGet/Json.Converters</RepositoryUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <DebugType>Embedded</DebugType>         <!-- Health: Compiler Flags -->
    <EmbedAllSources>True</EmbedAllSources> <!-- Health: Source Links -->
    <!-- Health: Deterministic (CI builds) -->
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
    <DeterministicSourcePaths>true</DeterministicSourcePaths>
    <Deterministic>true</Deterministic>
  </PropertyGroup>

  <ItemGroup>
    <!-- IMPORTANT: add common resources as links -->
    <None Include="..\..\..\License.txt" Visible="false" Pack="true" PackagePath="\" />
    <None Include="..\..\..\docs\NuGet\icon.png" Visible="false" Pack="true" PackagePath="\" />
    <None Include="..\..\..\docs\NuGet\Json.Converters\README.md" Pack="true" PackagePath="\" Link="Properties\README.md" />
    <SourceRoot Include="$(SolutionDir)" /> <!-- CI builds -->
  </ItemGroup>

  <PropertyGroup>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GenerateAssemblyCopyrightAttribute>false</GenerateAssemblyCopyrightAttribute>
    <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\Common\SharedAssemblyInfo.cs" Link="Properties\SharedAssemblyInfo.cs" />
  </ItemGroup>

</Project>
